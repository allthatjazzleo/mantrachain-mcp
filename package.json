    "@cosmjs/proto-signing": "^0.33.1",
    "@cosmjs/stargate": "^0.33.1",
    "@cosmjs/tendermint-rpc": "^0.33.1",
    "@modelcontextprotocol/sdk": "^1.8.0",
    "cosmjs-types": "^0.9.0",
    "dotenv": "^16.4.7",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "0.7.0",
    "@types/node": "^22.13.10",
    "ts-node": "^10.9.1",
    "typescript": "^5.8.2"

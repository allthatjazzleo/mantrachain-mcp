{
  "name": "mantrachain-mcp",
  "version": "1.0.3",
  "description": "Model Context Protocol server for MantraChain (Cosmos SDK)",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node build/index.js",
    "dev": "ts-node src/index.ts",
    "test": "echo \"Error: no test specified\" && exit 1",
    "debug": "npx @modelcontextprotocol/inspector -e MNEMONIC=\"YOUR_MNEMONIC\" -- node build/index.js",
    "prepublishOnly": "npm run build"
  },
  "bin": {
    "mantrachain-mcp": "./build/index.js"
  },
  "files": [
    "build",
    "README.md",
    "LICENSE",
    ".env.example"
  ],
  "dependencies": {
    "@cosmjs/cosmwasm-stargate": "^0.33.1",
    "@cosmjs/crypto": "^0.33.1",
